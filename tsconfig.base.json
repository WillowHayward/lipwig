{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "strict": true,
        "strictPropertyInitialization": false,
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@lipwig/angular": ["libs/angular/src/index.ts"],
            "@lipwig/chat/client": ["libs/chat/client/src/index.ts"],
            "@lipwig/chat/common": ["libs/chat/common/src/index.ts"],
            "@lipwig/js": ["libs/js/src/index.ts"],
            "@lipwig/model": ["libs/model/src/index.ts"],
            "@lipwig/nx": ["libs/nx/src/index.ts"],
            "@lipwig/server": ["libs/server/src/index.ts"],
            "@lipwig/utils": ["libs/utils/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
