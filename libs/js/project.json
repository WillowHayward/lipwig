{
    "name": "js",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/js/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/libs/js",
                "main": "libs/js/src/index.ts",
                "tsConfig": "libs/js/tsconfig.lib.json",
                "assets": ["libs/js/*.md"]
            }
        },
        "publish": {
            "command": "node tools/scripts/publish.mjs js {args.ver} {args.tag}",
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["libs/js/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "libs/js/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "sync-deps": {
            "executor": "@lipwig/nx:sync-deps",
            "options": {
                "dependencies": ["@lipwig/model", "@lipwig/utils"]
            }
        },
        "deploy": {
            "executor": "ngx-deploy-npm:deploy",
            "options": {
                "access": "public"
            }
        },
        "deploy-prerelease": {
            "executor": "ngx-deploy-npm:deploy",
            "options": {
                "access": "public",
                "tag": "next"
            }
        }
    },
    "tags": ["deploy"]
}
